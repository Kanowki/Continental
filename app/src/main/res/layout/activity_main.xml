<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/continental_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tanguygranat.continental.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:id="@+id/mailLogin"
        android:hint="Adresse email"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/button_color_disabled_inverse"
        android:background="@color/cardview_light_background" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/passwordLogin"
        android:hint="Mot de passe"
        android:layout_below="@+id/mailLogin"
        android:layout_alignStart="@+id/mailLogin"
        android:textColor="@android:color/white"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:background="@color/button_color_disabled_inverse"
        android:fontFamily="sans-serif" />

    <Button
        android:text="Connexion"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:id="@+id/loginBtn"
        android:onClick="onLoginClick"
        android:elevation="0dp"
        android:background="@android:color/holo_orange_dark"
        android:outlineProvider="paddedBounds"
        tools:shadowRadius="30"
        android:textSize="14sp"
        android:textColor="@color/button_color_disabled_inverse" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/continental_logo"
        android:id="@+id/imageView"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/passwordLogin"
        android:layout_alignParentStart="true" />

</RelativeLayout>
